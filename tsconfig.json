{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src/index.ts"
    ],
    "readme": "none",
    "out": "public/api"
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  }
}
