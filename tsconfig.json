{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES6",
      "DOM"
    ]
  },
  "typedocOptions": {
    "out": "public/api",
    "readme": "README.typedoc.md"
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  }
}
