{
  "name": "@tmorin/ceb",
  "version": "2.0.0-alpha.10",
  "license": "MIT",
  "description": "ceb (custom-element-builder) is a library helping to develop Custom Elements.",
  "keywords": [
    "custom-element-builder",
    "web-components",
    "Web",
    "Components",
    "Component",
    "Custom",
    "Element",
    "Elements",
    "DOM",
    "W3C",
    "FRP",
    "functional",
    "reactive",
    "template",
    "builder"
  ],
  "homepage": "https://tmorin.github.io/ceb",
  "bugs": {
    "url": "https://github.com/tmorin/ceb/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tmorin/ceb.git"
  },
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/ceb.js",
  "types": "lib/ceb.d.ts",
  "unpkg": "dist/ceb.min.js",
  "scripts": {
    "test": "karma start --single-run --no-auto-watch --browsers sl_firefox,sl_chrome ",
    "test:watch": "karma start --no-single-run --auto-watch --browsers Firefox",
    "test:local": "karma start --single-run --no-auto-watch --browsers Firefox",
    "build:clean": "rimraf .tmp dist lib *.tgz",
    "build:lib": "tsc",
    "build:umd": "webpack --config webpack.dev.js",
    "build:umd:min": "webpack --config webpack.prd.js",
    "build": "npm run build:clean && npm run build:lib && npm run build:umd && npm run build:umd:min",
    "prerelease": "npm run build && standard-version --skip.changelog --skip.tag --prerelease alpha",
    "prerelease:publish": "git push --tags && git push --all && npm publish --tag canary --tag latest",
    "book:typedoc": "typedoc",
    "book:build": "mdbook clean && mdbook build",
    "book:watch": "mdbook watch",
    "book:serve": "mdbook serve",
    "book:publish": "cd public && git init && git commit --allow-empty -m 'update site' && git checkout -b gh-pages && git add . && git commit -am 'update site, [skip ci]' && git push git@github.com:tmorin/ceb gh-pages --force && cd .."
  },
  "devDependencies": {
    "@tmorin/udom": "^0.6.0",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^7.5.2",
    "@webcomponents/webcomponentsjs": "^2.4.2",
    "karma": "^4.4.1",
    "karma-cli": "^2.0.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^2.0.2",
    "karma-webpack": "^4.0.2",
    "mocha": "^7.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^7.5.0",
    "standard-version": "^7.1.0",
    "ts-loader": "^6.2.1",
    "typedoc": "^0.16.11",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  }
}
